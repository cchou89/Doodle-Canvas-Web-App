<% include ../partials/header %>


<div class="row" style="height: 100%;" >
    <div class="col-md-9" id="drawingContainer" style="border: red solid 1px;">
        <canvas id="drawing" width="100%" height="100%"></canvas>
    </div>
    <div class="col-md-3" style="border: blue solid 1px;">
        <button class="btn btn-lg btn-warning" onclick="clearit()">Clear drawings</button>

        <% if(loggedinUser){ %>
            <h1 class="lead">Anonymous Chat</h1>
            <form id ="message-form" action="#" method="get">
                <input id="message" autocomplete="off" />
                <button class="btn btn-md btn-default ">Send</button>
            </form>
            <ul id="message-list" style="height: 100%; overflow: scroll"></ul>
        <% }%>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.dev.js"></script>
<script type="text/javascript" src="/javascripts/chat-client.js"></script>
<script type="text/javascript" src="/javascripts/draw-client.js"></script>


<% include ../partials/footer %>
